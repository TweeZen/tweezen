pipeline {
    agent any
    tools {
        maven 'Maven 3.6.2'
        jdk 'jdk8'
    }
    stages {
        stage ('Checking Tools') {
            steps {
                sh '''
                    echo 'user in use:' $USER
                    docker version
                '''
            }
        }
        stage('Google Authentification') {
            steps {
                sh '''
                    gcloud auth activate-service-account 592775981948-compute@developer.gserviceaccount.com --key-file=/opt/bitnami/k8s-credentials.json
                    gcloud auth configure-docker --quiet
                    gcloud auth list
                '''
            }
        }
        stage('Deployment') {
            steps {
                dir("deployment") {
                    sh '''
                        kubectl apply -f deployment_redis.yaml
                        kubectl apply -f deployment_app.yaml
                    '''
                }
            }
        }
    }
}